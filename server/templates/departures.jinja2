{% extends "layout.jinja2" %}
    {% block title %} Departures {% endblock %}
    {% block content %}
        <section>
            <h2>Departures:</h2>
            {% if not departures_info %}
                <p>No Services are currently available at this stop</p>
            {% endif %}
            <ul>
            {% for departure in departures_info %}
            {% set hours, minutes, seconds = departure.time_to_arrive %}
                <section>
                    {% if loop.changed(departure.location) %}
                        <h3> {{ departure.location }} </h3>
                    {% endif %}
                    <p>{{ hours }} hours, {{ minutes }} minutes, {{ seconds }} and seconds</p>
                    <p>{{ departure.route }} to {{ departure.dest }}
                </section>
            {% endfor %}
            </ul>
        </section>
    {% endblock %}